


int poolVolume = int.Parse(Console.ReadLine());
int firstPipe  = int.Parse(Console.ReadLine());
int secondPipe  = int.Parse(Console.ReadLine());
double hoursGone = double.Parse(Console.ReadLine());

double firstPipeVolume = firstPipe * hoursGone;
double secondPipeVolume = secondPipe * hoursGone;
double pipeVolumeTotal = firstPipeVolume +  secondPipeVolume;

if  (pipeVolumeTotal > poolVolume)
{
    Console.WriteLine($"For {hoursGone} hours the pool overflows with {pipeVolumeTotal-poolVolume:F2} liters.");
}

double firstPipePercent =  (firstPipeVolume / pipeVolumeTotal) * 100;
double secondPipePercent = (secondPipeVolume / pipeVolumeTotal) * 100;
double allPipesPercent = firstPipePercent + secondPipePercent;


if (poolVolume >= pipeVolumeTotal)
{
    double percentFull = (pipeVolumeTotal / poolVolume) * 100;
    Console.WriteLine($"The pool is {percentFull:F2}% full. Pipe 1: {firstPipePercent:F2}%. Pipe 2: {secondPipePercent:F2}%.");
}
