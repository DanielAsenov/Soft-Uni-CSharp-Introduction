



int yearlyCost = int.Parse(Console.ReadLine());

double basketballShoes = yearlyCost * 0.6;
double basketballClothes = basketballShoes * 0.8;
double basketballCost = basketballClothes / 4;
double basketballAccesories = basketballCost / 5;

double totalCost =yearlyCost + basketballShoes + basketballClothes + basketballCost + basketballAccesories;

Console.WriteLine($"{totalCost:F2}");
